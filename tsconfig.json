{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "declaration": true, 
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "esModuleInterop": true, 
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true 
    }
}