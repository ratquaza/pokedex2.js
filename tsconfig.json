{
    "compilerOptions": {
        "module": "es6",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "declaration": true, 
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "moduleResolution": "Node"
    }
}